package info.girdworld.critters;

import info.gridworld.actor.Actor;
import info.gridworld.grid.Location;

import java.util.ArrayList;

public class ChameleonKid extends ChameleonCritter {

	
	@Override
	public ArrayList<Actor> getActors(){
		 ArrayList<Location> locs = new ArrayList<Location>();

	        int d = Location.AHEAD;
	        for (int i = 0; i < Location.FULL_CIRCLE / Location.HALF_RIGHT; i++)
	        {
	            Location neighborLoc = getLocation().getAdjacentLocation(d);
	            if (getGrid().isValid(neighborLoc))
	                locs.add(neighborLoc);
	            d = d + Location.HALF_RIGHT;
	        }
	        
	        ArrayList<Actor> frontback = new ArrayList<Actor>();
	        frontback.add(getGrid().get(locs.get(0)));
	        frontback.add(getGrid().get(locs.get(1)));
	        
	        return frontback;
	        
	}
	
	
	
	
}
