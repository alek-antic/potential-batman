package info.gridworld.critters;

import java.util.ArrayList;

import info.girdworld.critters.CrabCritter;
import info.gridworld.grid.Grid;
import info.gridworld.grid.Location;

public class QuickCrab extends CrabCritter {

	@Override
	public ArrayList<Location> getLocationsInDirections(int[] directions) {
		
		 ArrayList<Location> locs = new ArrayList<Location>();
	        Grid gr = getGrid();
	        Location loc = getLocation();
	    
	        for (int d : directions)
	        {
	            Location neighborLoc = loc.getAdjacentLocation(getDirection() + d);
	            Location farNeighborLoc = neighborLoc.getAdjacentLocation(getDirection() + d);
	            if (gr.isValid(neighborLoc) && gr.get(neighborLoc) == null)
	                locs.add(neighborLoc);
	            else 
	            	continue;
	            if(gr.isValid(farNeighborLoc))
	            	locs.add(farNeighborLoc);
	        }
	        return locs;
	}
	
	
	@Override
	public ArrayList<Location> getMoveLocations() {
		ArrayList<Location> locs = new ArrayList<Location>();
        int[] dirs =
            { Location.LEFT, Location.RIGHT };
        for (Location loc : getLocationsInDirections(dirs))
            if (getGrid().get(loc) == null)
                locs.add(loc);

        return locs;
	}
}
