package info.girdworld.critters;

import info.gridworld.actor.Actor;
import info.gridworld.grid.Location;

import java.util.ArrayList;

public class ChameleonKid extends ChameleonCritter {

	
	@Override
	public ArrayList<Actor> getActors(){
		ArrayList<Actor> frontback = new ArrayList<Location>();
		frontback.add(getGrid().get(getLocation().getAdjacentLocation(Location.AHEAD)));
		frontback.add(getGrid().get(getLocation().getAdjacentLocation(Location.AHEAD-180)));
		return frontback;
	}
}
