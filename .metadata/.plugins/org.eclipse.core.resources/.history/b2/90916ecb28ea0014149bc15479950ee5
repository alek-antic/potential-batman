package info.girdworld.critters;

import info.gridworld.actor.Actor;
import info.gridworld.grid.Location;

import java.util.ArrayList;

public class ChameleonKid extends ChameleonCritter {

	
	@Override
	public ArrayList<Actor> getActors(){
		 ArrayList<Actor> adjacent = getGrid().getNeighbors(getLocation());
		 ArrayList<Actor> frontback = new ArrayList<Actor>();
		 frontback.add(adjacent.get(getDirection()%Location.FULL_CIRCLE));
		 frontback.add(adjacent.get(getDirection()%Location.HALF_CIRCLE));
		 return frontback;
	        
	}
	
	
	
	
}
