import java.io.*;
import java.util.Scanner;

public class FileIO {

	public String readFile(String filename) {
		
		FileReader reader;
		
		try {
			
			reader = new FileReader(filename);
			Scanner in = new Scanner(reader);
			
			String fileData = "";
			
			while(in.hasNextLine()) {
				String input = in.nextLine();
				fileData += input;
			}
			
			return fileData;
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		
	}
}
